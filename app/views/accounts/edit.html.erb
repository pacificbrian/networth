<div class="edit">
<h2>Edit Account</h2>

<%= error_messages_for 'account' %>

<%= form_for @account do |f| %>
<fieldset>
<table>
<td>
<label>Type</label>
<%= f.collection_select :account_type_id, @account_types, :id, :name %>
</td>
<td>
<label>Currency</label>
<%= f.collection_select :currency_type_id, @currency_types, :id, :name %>
</td>
<td>
<label>Taxable</label>
<%= f.check_box :taxable %>
</td>
<td>
<label>Hidden</label>
<%= f.check_box :hidden %>
</td>
<td>
<label>Watchlist</label>
<%= f.check_box :watchlist %>
</td>
</table>
</fieldset>
<fieldset>
<label>Account Name</label>
<%= f.text_field :name %>
</fieldset>
<fieldset>
<label>Account Number</label>
<%= f.text_field :number %>
</fieldset>
<fieldset>
<label>Routing Number</label>
<%= f.text_field :routing %>
</fieldset>
<fieldset>
<label>Payee Name Length</label>
<%= f.text_field :payee_length %>
</fieldset>
<fieldset>
<label>Cash Balance</label>
<%= f.text_field :cash_balance %>
</fieldset>
<fieldset class="last">
<label>Balance</label>
<%= f.text_field :balance %>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Update' %>
</fieldset>
<% end %>
</div>

<ul id="footmenu">
<li><%= link_to 'Back to Account', account_path(@account) %></li>
<li><%= link_to 'Back to Accounts', accounts_path %></li>
<li><%= link_to 'Delete Account', account_path(@account), :method => :delete %></li>
</ul>
