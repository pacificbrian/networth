<div class="listing">

<% if @watchlist.size %>
<h2>WatchList Portfolios</h2>
<table>
<% for a in @watchlist %>
<tr>
<td></td> 
<td><%= link_to a.name, account_path(a) %></td>
<td class="currency"><%= number_to_currency(a.balance) %></td>
<td>
<%= link_to 'Edit', edit_account_path(a) %>
</td>
<td>
<%= link_to 'Chart', account_charts_path(a) %>
</td>
</tr>
<% end %>
</table>
<% end %>

</div>

<ul id="footmenu">
<li><%= link_to 'New Account', new_account_path %></li>
</ul>
