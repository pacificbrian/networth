<%= error_messages_for 'cash_flow' %>
<% if !cash_flows.empty? %>
<div class="dynamic">
<table class="ledger">
<tr>
<th>Account</th>
<th>Date</th
<th>Payee</th>
<th>Category</th>
<th>Amount</th>
</tr>
<% n =  0 %>
<% for c in cash_flows %>
<% if (n % 2) == 0 %>
<tr>
<% else %>
<tr class="even">
<% end %>
<% n = n + 1 %>
<td><%= c.account.name %></td>
<td><%= c.date %></td>
<td><%= c.get_payee_name %></td>
<td><%= c.get_cat_name %></td>
<td class="currency"><%= number_to_currency(c.amount) %></td>
<td><%= link_to 'Edit', edit_cash_flow_path(c) %></td>
</tr>
<% end %>
</table>
</div>
<% end %>
