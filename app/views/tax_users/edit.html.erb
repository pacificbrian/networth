<div class="edit">
<%= error_messages_for 'tax_user' %>

<h2>Tax Result</h2>

<% if @year %>
<% _submit_path = year_tax_user_path(@year, @tax_user) %>
<% else %>
<% _submit_path = tax_user_path(@tax_user) %>
<% end %>
<%= form_for @tax_user, :url => _submit_path do |f| %>
<fieldset>
<label>Tax Year</label>
<%= f.text_field :year, :size => 10 %>
<% if nil %>
<%= f.date_select :year, { :discard_day => true, :discard_month => true } %>
<% end %>
<%= f.collection_select :tax_region_id, @tax_regions, :id, :name %>
<%= f.collection_select :filing_status, @tax_filing_status, :id, :name %>
</fieldset>
<fieldset class="last">
<label>Exemptions</label>
<%= f.text_field :exemptions, :size => 10 %>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Update Tax Result'%>
</fieldset>
<% end %>
</div>

<% if @year %>
<ul id="footmenu">
<li><%= link_to 'All Taxes', year_taxes_path(@year) %></li>
</ul>
<% end %>
