<div class="edit">
<h2>Edit Tax Item</h2>

<%= error_messages_for 'tax' %>

<% if @year %>
<% _submit_path = year_tax_path(@year, @tax) %>
<% else %>
<% _submit_path = tax_path(@tax) %>
<% end %>
<%= form_for @tax, :url => _submit_path do |f| %>
<fieldset>
<label>Tax Year</label>
<%= f.date_select :year, { :discard_day => true, :discard_month => true } %>
<%= f.collection_select :tax_region_id, @tax_regions, :id, :name %>
</fieldset>
<fieldset>
<label>Item Name</label>
<%= f.collection_select :tax_type_id, @tax_types, :id, :name %>
<%= f.collection_select :tax_item_id, @tax_items, :id, :name %>
</fieldset>
<fieldset>
<label>Memo</label>
<%= f.text_field :memo %>
</fieldset>
<fieldset class="last">
<label>Amount</label>
<%= f.text_field :amount %>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Update'%>
</fieldset>
<% end %>
</div>

<ul id="footmenu">
<% if @year %>
<li><%= link_to 'Back to Tax Items', year_taxes_path(@year) %></li>
<li><%= link_to 'Delete Tax Item', year_tax_path(@year, @tax), :method => :delete %></li>
<% else %>
<li><%= link_to 'Back to Tax Items', taxes_path %></li>
<li><%= link_to 'Delete Tax Item', tax_path(@tax), :method => :delete %></li>
<% end %>
</ul>
