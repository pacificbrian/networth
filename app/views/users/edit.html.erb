<div class="edit">
<h2>Edit User</h2>

<%= error_messages_for :user %>

<%= form_for @user do |f| %>
<fieldset>
<label>Login ID</label>
<%= f.text_field :login %>
</fieldset>
<fieldset>
<label>Email Address</label>
<%= f.text_field :email %>
</fieldset>
<fieldset>
<%= label_tag 'old_password', 'Old Password' %>
<%= f.password_field :old_password %></p>
</fieldset>
<fieldset>
<%= label_tag 'password', 'New Password' %>
<%= f.password_field :password %></p>
</fieldset>
<fieldset>
<%= label_tag 'password_confirmation', 'Confirm Password' %>
<%= f.password_field :password_confirmation %></p>
</fieldset>
<fieldset>
<label>CashFlow Display Limit</label>
<%= f.text_field :cashflow_display_limit %>
</fieldset>
<fieldset>
<label>Refresh: Import CashFlows</label>
<%= f.check_box :import_on_refresh %>
</fieldset>
<fieldset>
<label>Refresh: Update Balance History</label>
<%= f.check_box :balances_on_refresh %>
</fieldset>
<fieldset>
<label>Refresh: Update Investment Account Balances</label>
<%= f.check_box :account_securities_on_refresh %>
</fieldset>
<fieldset>
<label>Refresh: Update Security Quotes</label>
<%= f.check_box :quotes_on_refresh %>
</fieldset>
<fieldset class="last">
<label>Account#show: Update Balance History</label>
<%= f.check_box :balances_on_account_show %>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Update' %>
</fieldset>
<% end %>
</div>

<ul id="footmenu">
<li><%= link_to 'Dashboard', user_path(@user) %></li>
</ul>
