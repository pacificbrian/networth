<div class="new">
<h2>Login</h2>

<%= error_messages_for :user %>

<%= form_for @user do |f| %>
<fieldset>
<label>User Login</label>
<%= f.text_field :login %>
</fieldset>
<fieldset class="last">
<label>User Password</label>
<%= f.text_field :password %>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Submit' %>
</fieldset>
<% end %>
</div>

<ul id="footmenu">
<li><%= link_to 'Add New User', new_user_path %></li>
</ul>
