<div class="new">
<h2>User Sign Up</h2>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<%= form_for @user do |f| -%>
<fieldset>
<label>Login ID</label>
<%= f.text_field :login %>
</fieldset>
<fieldset>
<label>Email Address</label>
<%= f.text_field :email %>
</fieldset>
<fieldset>
<%= label_tag 'password' %>
<%= f.password_field :password %>
</fieldset>
<fieldset>
<%= label_tag 'password_confirmation', 'Confirm Password' %>
<%= f.password_field :password_confirmation %></p>
</fieldset>
<fieldset class="last">
<label>CashFlow Display Limit</label>
<%= f.text_field :cashflow_limit%>
</fieldset>
<fieldset class="submit">
<%= submit_tag 'Sign Up!' %>
</fieldset>
<% end -%>
</div>

<ul id="footmenu">
<li><%= link_to 'Back to Login', login_path %></li>
</ul>
